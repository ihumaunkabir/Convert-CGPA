<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    android:background="@drawable/newbg"
    tools:context="com.ccgpa.ihumaun.convertcgpa.MainActivity">



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:textAlignment="center"
        android:background="@drawable/fieldbg"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cgpa"
        android:hint="Your CGPA here"
        android:textColorHint="#000000"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/fieldbg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/abroad"
        android:textAlignment="center"
        android:background="@drawable/fieldbg"
        android:spinnerMode="dropdown"
        android:textColor="#FFF"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Converted CGPA will show here.\nYour CGPA         : xx.yy\nConverted CGPA : ww.zz"
        android:id="@+id/result"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/abroad"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFD700"
        android:background="@drawable/fieldbg"
        android:layout_below="@+id/convert" />

    <Button
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:background="#F56749"
        android:text="Convert"
        android:onClick="ConvertClick"
        android:textColor="#000000"
        android:id="@+id/convert"
        android:textAllCaps="false"
        android:layout_marginStart="60dp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/abroad" />

    <Button
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:text="Reset"
        android:onClick="ResetClick"
        android:background="#F56749"
        android:textAllCaps="false"
        android:id="@+id/reset"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/abroad"
        android:layout_marginEnd="60dp"
        android:layout_alignTop="@+id/convert" />



</RelativeLayout>
